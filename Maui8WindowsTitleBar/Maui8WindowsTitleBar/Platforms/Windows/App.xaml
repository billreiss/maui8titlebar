<maui:MauiWinUIApplication
    x:Class="Maui8WindowsTitleBar.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:Maui8WindowsTitleBar.Platforms.Windows">
    <maui:MauiWinUIApplication.Resources>
        <Color x:Key="TitleBarColor">Tan</Color>
        <DataTemplate x:Key="MauiAppTitleBarTemplate">
            <Grid local:TitleHelper.IsTitleGrid="True" x:Name="TitleBarContainer" HorizontalAlignment="Stretch">
                <TextBlock x:Name="AppTitle" Text="Hi" Margin="5"/>
            </Grid>
        </DataTemplate>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
